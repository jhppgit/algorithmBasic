package algorithm.ch01.quiz;

public class Q11 {
	public static void main(String[] args) {
		for(int i = -1; i < 10; i++) {
			if(i != 0) {
				for(int j = -1; j < 10; j++) {
					if(j == -1 && i == -1) {
						System.out.printf("%3s", "");
					} else if (j == 0) {
						System.out.printf("%3s", "|");
					} else if (j == -1){
						System.out.printf("%3d", i * j);
					}
					
				}
				System.out.println();
			} else{
				System.out.println("---+---------------------------");
			}
		}
	}
}
