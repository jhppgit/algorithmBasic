package algorithm.ch05;

import java.util.Scanner;

// 재귀함수 이해
public class Recur {
	// 재귀함수
	static void recur(int n) {
		if (n > 0) {
			recur(n - 1);
			System.out.print(n + " ");
			recur(n - 2);
		}
	}
	
	public static void main(String[] args) {
		Scanner stdIn = new Scanner(System.in);
		
		System.out.print("정수 입력 : ");
		recur(stdIn.nextInt());
	}
}
