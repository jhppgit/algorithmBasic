package algorithm.quiz.ch01;
// 직각이등변삼각형 메서드로 출력
public class Q14 {
	public static void main(String[] args) {
		triangleLB(5);
	}
	
	static void triangleLB(int n) {
		for (int i = 1; i <= n; i++) {
			System.out.println("*".repeat(i)); 
		}
		System.out.println();
		
		for (int i = 0; i < n; i++) {
			System.out.println("*".repeat(i + 1));
		}
		System.out.println();
		
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
